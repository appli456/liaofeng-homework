{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "packages/*"
  ],
  "exclude": [
    "node_modules",
    ".eslintrc.js",
    "jest.config.js",
    "scripts",
    "examples"
  ]
}
