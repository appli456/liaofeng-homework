{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
  },
  "include": [
    "packages/*"
  ],
  "exclude": [
    "node_modules",
    ".eslintrc.js",
    "jest.config.js",
    "scripts",
    "examples"
  ]
}
